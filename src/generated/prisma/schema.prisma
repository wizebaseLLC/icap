generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  firstName     String
  lastName      String
  dateOfBirth   DateTime
  phoneNumber   String
  streetAddress String
  state         String
  zipCode       Int
  filePath      String // path to the uploaded file saved on server
  createdAt     DateTime @default(now())
}
